    "files.autoSave":	"onWindowChange",
    "editor.insertSpaces":			false,
	"editor.detectIndentation":		false,
	"editor.renderFinalNewline":	false,
	"explorer.confirmDragAndDrop":	false,
	"editor.fontFamily":	"'Roboto Mono', Consolas",
	"editor.autoClosingBrackets":	"never",
	"editor.autoClosingQuotes":		"never",
	"problems.showCurrentInStatus":	true,
	
	"vim.statusBarColorControl":		true,
	"vim.statusBarColors.normal":		"#0C0E14",
	"vim.statusBarColors.insert":		"#731bb360",
	"vim.statusBarColors.visual":		"#857a0030",
	"vim.statusBarColors.visualblock":	"#00b2c930",
	"vim.statusBarColors.visualline":	"#9c001d30",

	"workbench.colorCustomizations": {
		"editor.background": "#0D1117",
		"activityBar.background": "#07090c",
		"sideBar.background": "#0C0E14",
		"editorGroupHeader.tabsBackground": "#0C0E14",
		"tab.inactiveBackground": "#1d1f23",
		"statusBar.background": "#731bb360",
		"statusBar.foreground": "#ffffff",
		"editorLineNumber.activeForeground": "#DDDDDD",
		"editorCursor.background": "#0D1117",
		"editorCursor.foreground": "#D4B6CA",
		"editor.selectionBackground": "#ffe3e94d",
		"editor.inactiveSelectionBackground": "#ff0000",
		"editor.findMatchHighlightBackground": "#ff0000",
		"editorBracketMatch.background": "#ffe3e94d",
		"editorBracketMatch.border": "#ffffff00",
		"statusBar.noFolderBackground": "#731bb360",
		"statusBar.debuggingBackground": "#731bb360",
		"editorBracketHighlight.foreground1": "#f0f6fcc1",
		"editorBracketHighlight.foreground2": "#ffff2690",
		"editorBracketHighlight.foreground3": "#26ff9690",
		"editorBracketHighlight.foreground4": "#b43bff90",
		"editorBracketHighlight.foreground5": "#ff00f790",
		"editorBracketHighlight.foreground6": "#ff009d90",
		"editorBracketHighlight.unexpectedBracket.foreground": "#ff0000"
	},

	"editor.tokenColorCustomizations": {
        "textMateRules": [
            {
				"scope": ["string.quoted.double"],
					"settings": {"foreground": "#85C057"}
            },
            {
				"scope": ["constant.character.escape"],
					"settings": {"foreground": "#FFD7D7"}
            },
            {
				"scope": ["constant.numeric"],
					"settings": {"foreground": "#78f6ff"}
            },
			{
                "scope": ["keyword.control", "keyword.operator.functionlike", "keyword.operator.sizeof"],
					//"settings": {"foreground": "#EC8E2C"}
					//"settings": {"foreground": "#FFD141"}
					"settings": {"foreground": "#d9b036"}
			},
			{
                "scope": ["keyword.control.while", "keyword.control.for"],
					//"settings": {"foreground": "#B986C0"}
					"settings": {"foreground": "#cb62d9"}
			},
			{
                "scope": ["entity.name.function"],
					"settings": {"fontStyle": "bold", "foreground": "#e34a87"}
			},
			{
                "scope": ["entity.name.function.operator",
						"keyword.operator.arithmetic", "keyword.operator.comparison",
						"keyword.operator.assignment",
						"punctuation.separator.pointer-access", "punctuation.separator.dot-access"],
					"settings": {"fontStyle": "", "foreground": "#ff9999"}
			},
			{
                "scope": ["entity.name.function.preprocessor"],
					//"settings": {"fontStyle": "", "foreground": "#c7a5cc"}
					"settings": {"fontStyle": "", "foreground": "#3c5ee6"}
			},
			{
                "scope": ["keyword.operator.bitwise"],
					"settings": {"fontStyle": "italic", "foreground": "#ff9999"}
			},
			{
                "scope": ["variable"],
					//"settings": {"fontStyle": "italic", "foreground": "#F0F6FC"}
					"settings": {"fontStyle": "italic", "foreground": "#ebfcfc"}
			},
			{
                "scope": ["variable.language.this"],
					"settings": {"fontStyle": "", "foreground": "#624e208a"}
			},
			{
                "scope": ["storage.type"],
					"settings": {"fontStyle": "", "foreground": "#4bb3e3"}
			},
			{
                "scope": ["entity.name.type"],
					"settings": {"fontStyle": "", "foreground": "#4be37e"}
			},
			{
                "scope": ["entity.name.namespace"],
					"settings": {"fontStyle": "", "foreground": "#c9c94eaa"}
			},
			{
                "scope": ["storage.type.string"],
					"settings": {"fontStyle": "", "foreground": "#ebfcfc"}
			},
			{
                "scope": ["punctuation.definition.comment"],
					"settings": {"fontStyle": "italic", "foreground": "#f0f6fc2d"}
			},
			{
                "scope": ["comment"],
					"settings": {"fontStyle": "italic", "foreground": "#d6e7f9b4"}
			},
			{
                "scope": ["constant.language.NULL"],
					"settings": {"fontStyle": "", "foreground": "#cc27e3"}
			},
        ]
	},
}